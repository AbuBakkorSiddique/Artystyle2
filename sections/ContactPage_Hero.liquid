<style>
.AboutPageBackground{

 {% if  section.settings.AboutHero_backgroundImage %}
  background-image:url('{{ section.settings.AboutHero_backgroundImage | image_url }}');

  {% else %}
  background-image:url('{{ 'BackgroundImage.avif' | asset_url }}');

{% endif %} 
background-size:cover;
background-position:center ;
background-repeat:no-repeat;
background-attachment:fixed;



}

.Logo{

    height:{{ settings.Logo_size }}px;

}

.NavigationBar{


color:{{ section.settings.Nav_Text_color }};
 

}
</style>


<div class="max-w-[100vw] mx-auto  AboutPageBackground  ">

 <!-- ==================================================================   -->   
<div class="min-h-[80vh] w-full bg-[rgba(0,0,0,0.4)]  flex flex-col gap-5 justify-center items-center"> 
<!-- ====================== Navigation Bar  Code ================== -->

<div class="w-full   ">
 <!-- Navigation Bar  -->
<div class="NavigationBar   w-full h-[16vh]  grid grid-cols-2 lg:grid-cols-4 justify-center items-center NavBar  border-none border-collapse bg-[rgba(0,0,0,0.2)]  ">
<!-- Nav Icons section -->
<div class=" w-full h-full  flex justify-start lg:justify-center items-center  lg:items-center px-[3vw]  ">
    
{% if settings.Logo %}
  <a href="/">
 <img src=" {{ settings.Logo | image_url }}" alt="" class="Logo">
    </a>

   {% else  %}
<a href="/">
 <h1 class="Name">{{ settings.Name }}</h1>
    </a>

{% endif %}

</div>

<!-- Nav Menu Section -->
<div class=" w-full h-full  col-span-1 lg:col-span-2   justify-center items-center gap-5 hidden lg:flex ">
   {% assign NavLink = section.settings.NavLink %}
   
    {% if section.settings.NavLink !=blank %}

     {% for  link in NavLink.links %}
        <a href="{{ link.links }}">
            <span> {{ link.title }} </span>

        </a>
        {% endfor %}
    
    
    {% endif %}

</div>

<!-- Nav Cart,search , user section -->
<div class=" w-full h-full hidden lg:flex justify-center items-center px-[5vw] gap-5  "> 

<!-- search -->
<button id="SearchIcon"> {% render 'Search_icons' %} </button>

<div class="w-full px-10 gap-40 h-full flex-col hidden transition-all transform translate-0 duration-300 fixed top-0 left-0 inset-0 right-0  justify-center items-center  bg-black" id="SerchBarBigMobile">

      <div class="w-full min-h-[10vh]  flex justify-center items-center  ">
        <a href="/">
     <button class="py-3 px-8 border white text-white hover:font-bold hover:bg-white hover:text-black"> Back to Home   </button>

        </a>
    </div>

    <form class="h-[10vh] w-full border flex flex-row justify-center items-center space-x-5" action="/search" method="get">
    <input type="text" name="q" placeholder="Search here ....." class="text-white w-full h-full outline-none px-5">
    <button type="submit" class="  py-5 bg-white text-black h-full px-5 sm:px-8 md:px-10">
        {% render 'Search_icons' %}
    </button>

</form>
</div>
<!-- Cart -->
<a href="{{ routes.cart_url }}"> <span class="relative"> <span class="absolute z-30 -top-5"> {{ cart.item_count }} </span>  {% render 'Cart_icons' %} </span>   </a>
<!-- Usr -->
<a href="{{ routes.account_url }}"> {% render 'User_Icons' %} </a>


</div>

<!-- Mobile Menu Section -->

<div class="lg:hidden   h-full w-full px-[4vw] flex justify-end items-center">
 <span class="ThreeDot" id="ThreeDot"> {% render 'ThreeDot_icons' %} </span>
</div>

<!-------------------- Mobile Device Menu   ------------------------->
<div id="MobileMenu" class="hidden MobileMenu fixed top-0 left-0  bottom-0 right-0 h-full w-full   bg-black z-50 inset-0  ">
<!-- Three Dot Close Button -->

<div class="min-h-[12vh] w-full flex flex-row  justify-between items-center px-5 border-b border-white mb-5 ">

<div>
{% if settings.Logo %}
  <a href="/">
 <img src=" {{ settings.Logo | image_url }}" alt="" class="Logo">
    </a>

   {% else  %}
<a href="/">
 <h1 class="Name">{{ settings.Name }}</h1>
    </a>

{% endif %}
</div>

    
<button class="text-white" id="CloseButton"> {% render 'Close_icons' %}</button>
</div>



<!-- Nav Menu Section -->
<div class=" w-full min-h-[50vh] flex flex-col justify-center items-center leading-10 px-10  ">
   {% assign NavLink = section.settings.NavLink %}
   
    {% if section.settings.NavLink !=blank %}

     {% for  link in NavLink.links %}
        <a href="{{ link.links }}">
            <span class="text-2xl"> {{ link.title }} </span>

        </a>
        {% endfor %}
    
    
    {% endif %}

</div>

<!-- Nav Cart,search , user section -->
<div class="w-full min-h-[20vh] flex flex-col space-y-5 px-10  "> 




<div class="min-h-[10vh] w-full flex flex-row justify-between items-center">
    <!-- Cart -->
<a href="{{ routes.cart_url }}"> <button class="text-2xl"> <span class="relative"> <span class="absolute z-30 -top-5"> {{ cart.item_count }} </span>  {% render 'Cart_icons' %} </span>  </button> </a>
<!-- Usr -->
<a href="{{ routes.account_url }}"> <button class="text-2xl"> {% render 'User_Icons' %} </button> </a>
</div>


<!-- search -->

<form class="min-h-[8vh] w-full border flex flex-row justify-center items-center space-x-5" action="/search" method="get">
    <input type="text" name="q"  placeholder="Search here ....." class="text-white w-full h-full outline-none px-5">
    <button type="submit" class="  py-5 bg-white text-black h-full px-5 sm:px-8 md:px-10">
        {% render 'Search_icons' %}
    </button>

</form>

</div>

</div>

<!------- ------------- Mobile Menu Finish -------------------->





<!-- Navigation Bar Finish Area -->
</div>

</div>

<!-- ========================= Navigation Bar Code =========================== -->

<!-- About Us Hero Section  Start -->
<div class="w-full min-h-[70vh]   flex justify-center items-center text-center">
<h1 class="text-7xl font-bold text-white"> {{section.settings.AboutUS_Heading }}  </h1>
</div>
<!-- About Us Hero Section FInish -->




 <!-- ======================================================================= -->
</div>
</div>









{% schema %}

{
"name": "TransParent Navbar",
"settings": [
{
"type": "link_list",
"id": "NavLink",
"label": "Nav Link",
"default":"main-menu"

},

{
"type": "image_picker",
"id": "AboutHero_backgroundImage",
"label": " Hero Background Image"


},{


"type": "text",
"id": "AboutUS_Heading",
"label": "About Us Heading",
"default":"Contact Us"

},{
"type": "color",
"id": "Nav_color",
"label": "Nav Color ",
"default":"#156291"

},
{
"type": "color",
"id": "Nav_Text_color",
"label": "Nav Text Color ",
"default":"#ffffff"

}


]



}

{% endschema %}



<script>

const ThreeDot = document.getElementById("ThreeDot");
const MobileMenu=document.getElementById("MobileMenu");
const CloseButton=document.getElementById("CloseButton");
const SearchIcon = document.getElementById("SearchIcon");
const SerchBarBigMobile=document.getElementById("SerchBarBigMobile");

ThreeDot.addEventListener("click",()=>{
    MobileMenu.classList.remove("hidden")

})

CloseButton.addEventListener("click",()=>{
MobileMenu.classList.add("hidden");

})

SearchIcon.addEventListener("click",()=>{
SerchBarBigMobile.classList.remove("hidden");
SerchBarBigMobile.classList.add("flex")
})

</script>