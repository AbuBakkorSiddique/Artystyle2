{
    "name": "Banner Section",
    "settings": [
        {
            "type": "image_picker",
            "id": "Background_Image",
            "label": "Background Image"
        }
    ],
    "blocks": [
        {
            "name": "Offer",
            "type": "Offer",
            "settings": [
                {
                    "type": "text",
                    "id": "Offer",
                    "label": "Offer"
                }
            ]
        },
        {
            "name": "Heading",
            "type": "Heading",
            "settings": [
                {
                    "type": "text",
                    "id": "Heading",
                    "label": "Heading"
                }
            ]
        },
        {
            "name": "Paragraph",
            "type": "Paragraph",
            "settings": [
                {
                    "type": "text",
                    "id": "Paragraph",
                    "label": "Paragraph"
                }
            ]
        },
        {
            "name": "Sub_Heading",
            "type": "Sub_Heading",
            "settings": [
                {
                    "type": "text",
                    "id": "Sub_Heading",
                    "label": "Sub Heading"
                }
            ]
        },
        {
            "name": "Button",
            "type": "Button",
            "settings": [
                {
                    "type": "text",
                    "id": "Button",
                    "label": "Button"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Banner Section",
           
        }
    ]
}
{% endschema %}
